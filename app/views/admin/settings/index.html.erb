<h2 class="font-weight-bold">Edit Setting</h2>
<hr>

<div class="row">
<div class="col-sm">
   <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#SettingModal">
    <i class="fa fa-plus-square" aria-hidden="true"></i>
     Setting
  </button>
</div><!-- akhir dari col-sm -->
<div class="col-sm">

</div><!-- akhir dari col-sm -->
</div><!-- akhir dari row -->

<br>
  <%= render 'layouts/flash' %>
<% @settings.each do |s| %>
  <div class="col-sm-6" id="containersetting">
    <div class="card" id="edit_link">
      <div class="card-body">
       <label class="font-weight-bold">Background</label>
       <%= image_tag s.background_website, class: 'img-fluid' %>
        <label class="font-weight-bold">Judul Website</label>
        <h5 class="card-title"><%= s.judul_website %></h5>
        <hr>
        <label class="font-weight-bold">Judul Footer</label>
        <p class="card-text"><%= s.judul_footer %></p>
        <hr>
        <%= link_to 'Edit', edit_admin_setting_url(s), id: "edit_link", remote: true, class: 'btn btn-primary btn-sm' %>
      </div>
    </div>
<% end %>
<br>
<br>
<!-- Modal -->
<%= form_for [:admin, @setting], remote: true do |f| %>
<div class="modal fade" id="SettingModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Setting</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="ui form">

          <div class="field">
            <label>Judul Website</label>
            <%= f.text_field :judul_website, class: 'form-control setting_judul_website ' %>
          </div>

            <div class="field">
              <label>Judul Footer</label>
             <%= f.text_field :judul_footer, class: 'form-control setting_judul_footer' %>
            </div>
            <div class="field">
              <label>Judul Backend</label>
             <%= f.text_field :judul_backend, class: 'form-control setting_judul_footer' %>
            </div>

            <div class="field">
              <label>Background</label>
             <%= f.file_field :background_website, class: 'form-control setting_background' %>
            </div>
        </form>
      </div><!-- end modal body -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Batal</button>
        <%= f.submit 'Simpan', class: 'btn btn-primary' %>
      </div>    
    </div>
  </div>
</div>
<% end %>
