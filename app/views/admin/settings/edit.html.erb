<h2 class="font-weight-bold">Edit Setting</h2>
<hr>
<%= render 'layouts/flash' %>
<%= form_for [:admin, @setting], :method => :put, remote: true do |f| %>
        <form class="form">
            <div class="form-group">
             <label class="font-weight-bold">Judul Website</label>
             <%= f.text_field :judul_website, class: 'form-control' %>
            </div>
            <div class="form-group">
             <label class="font-weight-bold">Judul Admin Backend</label>
             <%= f.text_field :judul_backend, class: 'form-control' %>
            </div>
            <div class="form-group">
             <label class="font-weight-bold">Judul Footer</label>
             <%= f.text_field :judul_footer, class: 'form-control' %>
            </div>
            <div class="form-group">
           <label class="font-weight-bold">Background</label>
            <%= f.file_field :background_website, class: 'form-control' %>
            </div>
                <% @settings.each do |s| %>
                    <div class="card" style="width: 18rem;">
                        <%= image_tag s.background_website, class: "card-img-top" %>
                    </div>
                 <% end %>        
            <br>
            <div class="form-group">
              <%= f.submit 'Save', class: 'btn btn-sm btn-primary' %>
              <%= link_to 'Cancel', :back, class: 'btn btn-sm btn-danger' %>
            </div>
        </form>
<% end %>
