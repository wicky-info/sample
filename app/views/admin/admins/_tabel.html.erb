<table class="table" id="edit_link">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nama</th>
      <th scope="col">Email</th>
      <th scope="col">Aksi</th>
    </tr>
  </thead>
  <tbody>
  <% @admins.each do |a| %>
    <tr id="containeradmins">
      <th scope="row">
        <%= a.id %>
      </th>
      <td><%= a.nama %></td>
      <td><%= a.email %></td>
      <td>
      <div class="btn-group">
          <button class="btn btn-danger btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Aksi
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <%= link_to 'Edit', edit_admin_admin_url(a), id: "edit_link", remote: true, class: 'dropdown-item' %>
            <%= link_to 'Delete', admin_admin_path(a), method: :delete, data: {confirm: 'Ingin menghapus data ?'}, class: 'dropdown-item' %>
          </div>
        </div>

      </td>
    </tr>
  <% end %>
  </tbody>
</table>